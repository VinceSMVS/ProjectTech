<!doctype html>
<html>
    <head>
        <title></title>
        <link rel="stylesheet" href="style.css">
    </head>
    <body>
        <div class="container">
            <h2>Login</h2>
            <form id="loginForm">

                <div class="username">
                    <label for="username">Username:</label>
                    <input type="text" id="username" minlength="7" maxlength="20" placeholder="" required>
                </div>

                <div class="password">
                    <label for="password">Password:</label>
                    <input type="password" id="password" minlength="7" maxlength="20" placeholder="" required>
                </div>

                <div class="birthday">
                    <label for="birthday">Birthday:</label>
                    <input type="number" id="birthday" placeholder="00000000" required>
                </div>

                <div class="eyecolor">
                    <label for="eyecolor">Eyecolor:</label>
                    <input type="color" id="color">
                    <input type="text" id="colorText" placeholder="R, G, B" required>
                </div>
                <input type="submit" value ="submit"> </submit>
            </form>
        </div>
    </body>
</html>